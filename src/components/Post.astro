---
import Categories from './Categories.astro';
interface Props {
    title: string;
    desc: string;
    img: string;
    categories: string[];
    url: string;
}
let {title,desc,img,categories, url} = Astro.props;
---

<div class="post">
    
    <div class="categories">
        {
        categories.map((category: any) => 
            <h3 class="category" style=`` >{category[0]}</h3>
        )
        }
    </div>
    <h3>{title}</h3>

    
    <p>{desc}</p>
    <a class="under" href={url}>Read more</a>
    <!-- {
    if img { <img src={img}> }
    } -->
</div>

<style>
.post {
    width: 100%;
    height:40%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-direction: column;
    background: rgba(255,255,255,.1);
    border-radius: 20px;

    padding: 40px;
    position: relative;
    overflow: hidden;

    .categories {
        top:0;
        width: 100%;
        height: 25px;
        /* background: red; */
        position: absolute;
        display: flex;
        align-items: center;
        /* justify-content:center; */
        /* grid-template-columns: repeat(2, 1fr); */
        
        .category {
            font-size: 1vw;
            width: fit-content;
            padding: 5px;
            color: rgba(255,255,255,.3);
            font-family: 'Courier New', Courier, monospace;
        }
    }
    h2 {
        margin-top: 50px;
        font-size: 40px;
        width: 100%;
    }
    p {
        font-size:20px;
    }
    a {
        color: white;
        font-size: 25px;
        padding: 10px;
        position: relative;
    }
}

</style>