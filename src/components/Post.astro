---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { buttonVariants } from "@/components/ui/button";
interface Props {
  title: string;
  desc: string;
  img: string;
  categories: string[];
  url: string;
}
let { title, desc, img, categories, url } = Astro.props;
---

<Card style={{ height: "100%" }}>
  <CardHeader>
    <CardTitle>{title}</CardTitle>
    <div class="flex flex-row">
      {
        categories.map((category) => (
          <h3
            class="rounded-lg border"
            style={`padding:0.25rem;margin:0.25rem;background:${category[1]}`}
          >
            {category[0]}
          </h3>
        ))
      }
    </div>
  </CardHeader>
  <CardContent>
    {desc}
  </CardContent>
  <CardFooter>
    <a class={buttonVariants({ variant: "outline" })} href={url}>Read more</a>
  </CardFooter>
</Card>

