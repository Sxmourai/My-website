---
import MainLayout from "./MainLayout.astro";

let { title, desc, img, categories } = Astro.props.frontmatter;
---

<MainLayout title={title}>
  <div class="header">
    <img
      src={img}
      style={{
        width: "100%",
        height: "50vh",
        position: "absolute",
        top: "0",
        zIndex: "-1",
        opacity: "0.5",
      }}
    />
    <div class="categories flex flex-row">
      {categories.map((c) => <h3 style={`background: ${c[1]}`}>{c[0]}</h3>)}
    </div>
    <h1>{title}</h1>
    <h2 style={{ textAlign: "center" }}>{desc}</h2>
  </div>
  <div class="content flex flex-col items-center justify-center">
    <slot />
  </div>
</MainLayout>
<style is:inline lang="scss">
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    .categories {
      margin-top: 40vh;
      h3 {
        font-size: 30px;
        padding: 15px;
        border-radius: 4px;
        margin: 10px;
      }
    }
    h1 {
      font-size: 38px;
      margin: 30px;
      margin-top: 20px;
    }
    h2 {
      font-size: 20px;
    }
  }
  .content {
    width: 80%;
    margin-top: 30px;
    p {
      text-align: justify;
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      text-align: center;
      margin: 10px;
    }
    h1 {
      font-size: 32px;
    }
    h2 {
      font-size: 24px;
    }
    h3 {
      font-size: 20px;
    }
  }
</style>
