---
import MainLayout from "./MainLayout.astro";
let {title, desc, img, categories} = Astro.props.frontmatter;
---

<MainLayout title={title}>
    <img src={img} />
    <h1>{title}</h1>
    <h2>{desc}</h2>
    <div class="separator"></div>
    <article>
        <slot />
    </article>
</MainLayout>

<style lang="scss">
img {
    position: absolute;
    width: 100%;
    height: 40vh;
    top:0;
    z-index: 0;
    opacity: .5;
}
h1 {
    text-align: center;
    margin-bottom: 5vh;
    margin-top: 30vh;
}
h2 {
    width: clamp(200px, 80%, 600px);
    text-align: center;
    margin-bottom: 0;
}
.separator {
    width: 100%;
    height: 2px;
    margin-top: 4.5vh;
    margin-bottom: 2vh;
    background: white;
}
article {
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

</style>